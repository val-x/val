{
  "name": "valen-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rimraf node_modules",
    "prepare": "bun scripts/prepare.js",
    "bootstrap": "turbo run build --force",
    "sync-upstream": "git fetch upstream && git checkout develop && git merge upstream/main && git push origin develop",
    "fs": "git flow feature start",
    "ff": "git flow feature finish",
    "rs": "git flow release start",
    "rf": "git flow release finish",
    "hfs": "git flow hotfix start",
    "hff": "git flow hotfix finish"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.3"
  },
  "packageManager": "bun@1.0.25",
  "engines": {
    "bun": ">=1.0.0"
  }
}
