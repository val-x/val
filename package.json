{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish",
    "start": "turbo run start",
    "postinstall": "turbo run postinstall",
    "sync-upstream": "node scripts/sync-upstream.js",
    "sync-and-push": "npm run sync-upstream && git push origin develop && git push origin main",
    "flow:init": "git flow init -d",
    "flow:fs": "git flow feature start",
    "flow:ff": "git flow feature finish",
    "flow:fp": "git flow feature publish",
    "flow:ft": "git flow feature track",
    "flow:rs": "git flow release start",
    "flow:rf": "git flow release finish",
    "flow:rp": "git flow release publish",
    "flow:rt": "git flow release track",
    "flow:hs": "git flow hotfix start",
    "flow:hf": "git flow hotfix finish",
    "flow:hp": "git flow hotfix publish",
    "start:python": "python -m exo.main",
    "update-topology": "python -m exo.viz.topology_viz",
    "dev:with-topology": "npm-run-all --parallel start:topology-api dev",
    "start:topology-api": "cross-env TOPOLOGY_API_PORT=$(python -c \"from exo.viz.topology_viz import find_available_port; print(find_available_port())\") python -m exo.viz.topology_viz"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^2.1.3",
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3"
  },
  "name": "design-system",
  "packageManager": "bun@1.1.17",
  "workspaces": [
    "packages/*",
    "packages/python-backend"
  ],
  "dependencies": {
    "@mantine/core": "^7.13.2",
    "@mantine/hooks": "^7.13.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-select": "^2.1.2",
    "@repo/typescript-config": "*",
    "@tabler/icons-react": "^3.19.0",
    "@tiptap/pm": "^2.8.0",
    "@tiptap/react": "^2.8.0",
    "@tiptap/starter-kit": "^2.8.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/react-katex": "^3.0.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/socket.io": "^3.0.2",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "framer-motion": "^11.11.1",
    "lucide-react": "^0.447.0",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.3.0",
    "novel": "^0.5.0",
    "react-katex": "^3.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "simplex-noise": "^4.0.3",
    "socket.io": "^4.8.0",
    "tailwind-merge": "^2.5.2"
  },
  "turbo": {
    "pipeline": {
      "dev": {
        "cache": false,
        "persistent": true
      },
      "start": {
        "cache": false,
        "persistent": true
      }
    }
  }
}
